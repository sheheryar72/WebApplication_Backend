@model List<WebDevelopmentBackend.Models.VideoModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Videos</title>
</head>
<body>
    <div>
        <ul>
            @if (Model != null && Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <li>
                        <a href="/Video/Play?ID=@Model[i].ID" target="_blank">@Model[i].Title</a>
                    </li>
                }


                @*foreach (var video in Model)
                {
                    <li>
                        <a href="/Video/Play?ID=@video.ID">@video.Title</a>
                    </li>
                }*@

            }
        </ul>

    </div>
</body>
</html>
